

<div class="container">
  <div class="row">

    <%= render "restaurant", restaurant: @restaurant %>
  </div>

  <div class="row">

      <%= link_to "add review", new_restaurant_review_path(@restaurant), class: "btn btn-success"%>


      <%= link_to "edit restaurant", edit_restaurant_path(@restaurant), class: "btn btn-primary"%>

      <%= link_to "Delete", restaurant_path(@restaurant), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"} %>
      <br>
      <br>
      <%= link_to "back to index", restaurants_path, {class: "btn btn-default"} %>

    </div>

  </div>
</div>
